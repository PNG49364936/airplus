<body class="custom-background">
        <div class="container text-center">
              <div class="row my4">
                <div class="col">
                    <p class="airplus">AIR PLUS</p>
                </div>
               </div>  
            

               <div class="row my-4">
                        <div class="col">
                            <div id='map' style='width: 400px; height: 300px; margin: auto;'></div>
                        </div>
               </div>  
               
               <div class="row my-4">
                                <div class="col">
                                <%= link_to image_tag("B777.jpeg", class: "img-fluid"), pages_operations_path %>
                                </div>
                </div>
            

            
                <script>
                    mapboxgl.accessToken = "pk.eyJ1IjoicG5nYXV0aGllciIsImEiOiJjbHFncjBjMG0xZGNlMm1ubWV2aXU1NnpmIn0.x06uuDfCgcRIZtJNmrF7Bg";
                    
                    // Définir les coordonnées une seule fois
                    const coordinates = [2.549324, 49.008468];
                
                    // Créer la carte
                    const map = new mapboxgl.Map({
                        container: 'map',
                        style: 'mapbox://styles/mapbox/streets-v12',
                        center: coordinates,
                        zoom: 8
                    });
                
                    // Ajouter un marqueur
                    new mapboxgl.Marker({
                        scale: 0.6,
                        color: '#fc0339'
                    })
                    .setLngLat(coordinates)
                    .addTo(map);
                </script>
           
        </div> 
</body>